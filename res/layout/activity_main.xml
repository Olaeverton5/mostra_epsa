<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@style/AppTheme"
    android:paddingLeft="@dimen/activity_horizontal_margin" >

    <Button
        android:id="@+id/bTcadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bTentrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/cadastre" />

    <Button
        android:id="@+id/bTentrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVesquecisenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/entrar" />

    <EditText
        android:id="@+id/eTsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tVsenha"
        android:layout_below="@+id/tVsenha"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tVesquecisenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTsenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="@string/esqueci" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tVemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eTemail"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="20dp"
        android:text="@string/email" />

    <EditText
        android:id="@+id/eTemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tVsenha"
        android:layout_below="@+id/tVemail"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tVsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTemail"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bTcadastrar"
        android:text="@string/senha" />

</RelativeLayout>